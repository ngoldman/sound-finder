{
  "name": "sound-finder",
  "version": "0.0.0",
  "description": "build a community around music",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/paulcpederson/sound-finder.git"
  },
  "browserify": {
    "transform": [
      "dotify",
      "babelify"
    ]
  },
  "browser": {
    "$": "./source/js/lib/$.js",
    "pub-sub": "./source/js/lib/pub-sub.js",
    "sound-cloud": "./source/js/lib/sound-cloud.js"
  },
  "watches": {
    "img": "source/img/**",
    "html": "source/index.html"
  },
  "scripts": {
    "js": "simplifyify source/js/index.js -d -o build/",
    "js:production": "npm run js -- -m",
    "sass": "node-sass source/sass/ -o build/ --include-path node_modules/ -q",
    "img": "imagemin-newer source/img/ build",
    "html": "cp source/*.* build/",
    "predev": "mkdir -p build && npm-run-all img html sass",
    "dev": "parallelshell 'rerun-script' 'npm run js -- -w' 'npm run sass -- -w' 'live-server --entry-file=200.html build'",
    "deploy": "npm run predev && npm run js && surge -p build/",
    "test": "standard source/js/**/*.js"
  },
  "author": "Paul C Pederson <paul.c.pederson@gmail.com> (http://paulcpederson.com/)",
  "license": "ISC",
  "dependencies": {
    "array-flatten": "^1.0.2",
    "array.from": "^0.2.0",
    "dom-matches": "^1.0.1",
    "mess": "^0.1.2",
    "object-assign": "^3.0.0",
    "tiny-emitter": "^1.0.0"
  },
  "devDependencies": {
    "babelify": "5.0.4",
    "dotify": "^1.1.0",
    "imagemin-newer": "^1.0.1",
    "inline-block-grid": "^0.1.0",
    "live-server": "^0.9.1",
    "node-sass": "^3.4.2",
    "npm-run-all": "^1.5.0",
    "parallelshell": "^2.0.0",
    "rerun-script": "^0.6.0",
    "scss-utils": "*",
    "simplifyify": "^2.0.1",
    "standard": "*",
    "surge": "^0.14.3"
  }
}
