{
  "name": "sound-finder",
  "version": "0.0.0",
  "description": "build a community around music",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/paulcpederson/sound-finder.git"
  },
  "browserify-shim": {
    "SC": "global:SC"
  },
  "browserify": {
    "transform": [
      "babelify",
      "browserify-shim"
    ]
  },
  "browser": {
    "$": "./source/js/lib/$.js",
    "rq": "./source/js/lib/rq.js",
    "scroll": "./source/js/lib/scroll.js",
    "pub-sub": "./source/js/lib/pub-sub.js",
    "templates": "./source/js/lib/templates.js",
    "sound-cloud": "./source/js/lib/sound-cloud.js",
    "similar-users": "./source/js/services/similar-users.js",
    "models/similar-users": "./source/js/models/similar-users.js"
  },
  "watches": {
    "js": ["source/js/**"],
    "templates": ["source/templates/**"],
    "sass": ["source/sass/**"],
    "img": ["source/img/**"]
  },
  "scripts": {
    "prejs": "mkdir -p build",
    "js": "browserify -e source/js/index.js -d -o build/bundle.js",
    "templates": "hulk source/templates/*.html -w es6 > source/js/lib/templates.js",
    "sass": "scss-cli source/sass/*.scss --include-path node_modules/ -o build/",
    "img": "imagemin-newer source/img/ build",
    "predev": "npm-run-all templates js sass img",
    "watch": "rerun-script",
    "dev": "parallelshell 'live-server' 'npm run watch'",
    "test": "standard"
  },
  "author": "Paul C Pederson <paul.c.pederson@gmail.com> (http://paulcpederson.com/)",
  "license": "ISC",
  "devDependencies": {
    "ampersand-events": "^1.1.1",
    "array-flatten": "^1.0.2",
    "array.from": "^0.2.0",
    "babelify": "^5.0.4",
    "browserify": "^8.1.3",
    "browserify-shim": "^3.8.3",
    "diff-dom": "^1.0.0",
    "fsmonitor": "^0.2.4",
    "hogan.js": "paulcpederson/hogan.js",
    "imagemin-newer": "^1.0.1",
    "inline-block-grid": "paulcpederson/inline-block-grid",
    "live-server": "^0.6.3",
    "mess": "^0.1.2",
    "npm-run-all": "^1.0.2",
    "observable": "^2.1.3",
    "parallelshell": "^1.0.4",
    "rerun-script": "^0.5.2",
    "scss-cli": "^0.0.5",
    "scss-utils": "*",
    "standard": "3.0.0"
  }
}
