{
  "name": "sound-finder",
  "version": "0.0.0",
  "description": "build a community around music",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/paulcpederson/sound-finder.git"
  },
  "browserify-shim": {
    "SC": "global:SC"
  },
  "browserify": {
    "transform": [
      "dotify",
      "babelify",
      "browserify-shim"
    ]
  },
  "browser": {
    "$": "./source/js/lib/$.js",
    "pub-sub": "./source/js/lib/pub-sub.js",
    "sound-cloud": "./source/js/lib/sound-cloud.js"
  },
  "watches": {
    "js": "source/js/**",
    "sass": "source/sass/**",
    "img": "source/img/**"
  },
  "scripts": {
    "js": "browserify -e source/js/index.js -d -o build/bundle.js",
    "sass": "scss-cli source/sass/*.scss --include-path node_modules/ -o build/",
    "img": "imagemin-newer source/img/ build",
    "predev": "mkdir -p build && npm-run-all js sass img",
    "dev": "parallelshell 'live-server' 'rerun-script'",
    "test": "standard"
  },
  "author": "Paul C Pederson <paul.c.pederson@gmail.com> (http://paulcpederson.com/)",
  "license": "ISC",
  "dependencies": {
    "array-flatten": "^1.0.2",
    "diff-dom": "^1.0.0",
    "mess": "^0.1.2",
    "observable": "^2.1.3",
    "tiny-emitter": "^1.0.0"
  },
  "devDependencies": {
    "array.from": "^0.2.0",
    "babelify": "^5.0.4",
    "browserify": "^8.1.3",
    "browserify-shim": "^3.8.3",
    "dotify": "^1.1.0",
    "imagemin-newer": "^1.0.1",
    "inline-block-grid": "paulcpederson/inline-block-grid",
    "live-server": "^0.6.3",
    "npm-run-all": "^1.0.2",
    "parallelshell": "^1.0.4",
    "rerun-script": "^0.6.0",
    "scss-cli": "^0.0.5",
    "scss-utils": "*",
    "standard": "3.0.0"
  }
}
